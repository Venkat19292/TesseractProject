<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/img_appIco"
        android:layout_width="70dp"
        android:layout_height="90dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_appname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="App Name:" />

        <TextView
            android:id="@+id/txt_packageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PackageName" />

        <TextView
            android:id="@+id/txt_classname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="classname:" />

        <TextView
            android:id="@+id/txt_versionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version Name" />

        <TextView
            android:id="@+id/txt_versionCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version Code" />
    </LinearLayout>
</LinearLayout>